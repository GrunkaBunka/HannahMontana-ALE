# Maintainer: Michael Monaco <thepoorpilot@gmail.com>

pkgname=hmontana-themes-kde4
_pkgname=themes-kde4
pkgver=1.0
pkgrel=1
pkgdesc='Hannah Montana Linux Kubuntu 9.04 themes'
arch=('any')
url='http://hannahmontana.sourceforge.net/'

source=('hmontana-themes-kde4.tar.gz'
'hmontana-new.png')

sha256sums=('SKIP'
'SKIP')

package() {
    mv "${srcdir}/usr/" "${pkgdir}"
    install "hmontana-new.png" "${pkgdir}/usr/share/wallpapers/"
    rm -r ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/*/background.png
    #resize for ksplash theme using 16:9 aspect ratio

    magick "hmontana-new.png" -resize 600 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/600x400/background.png
    magick "hmontana-new.png" -resize 800 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/800x600/background.png
    magick "hmontana-new.png" -resize 1024 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/1024x768/background.png
    magick "hmontana-new.png" -resize 1280 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/1280x1024/background.png
    magick "hmontana-new.png" -resize 1600 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/1600x1200/background.png
    magick "hmontana-new.png" -resize 1920 "resize_hmontana.png" && mv "resize_hmontana.png" ${pkgdir}/usr/share/kde4/apps/ksplash/Themes/hannah_montana/1920x1200/background.png

}
